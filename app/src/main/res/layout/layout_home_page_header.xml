<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1C1C1C"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/bga_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:banner_indicatorGravity="bottom"
        app:banner_pageChangeDuration="500"
        app:banner_placeholderDrawable="@drawable/img_def_banner_1"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointAutoPlayInterval="4000"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@drawable/selector_banner_indicator"
        app:banner_pointLeftRightMargin="2dp"
        app:banner_pointTopBottomMargin="3dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#111111" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="币级"
        android:textColor="#F7F7F7"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#111111" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/home_ic_good_big" />

        <TextView
            android:id="@+id/tv_coin_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_image_1"
            android:textColor="#DCDCDC"
            android:textSize="17sp"
            tools:ignore="RtlHardcoded"
            tools:text="XRP-瑞波币" />

        <TextView
            android:id="@+id/tv_score_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/home_ic_arrow_up_smal"
            android:textColor="#DCDCDC"
            android:textSize="17sp"
            tools:ignore="RelativeOverlap,RtlHardcoded"
            tools:text="9.4" />

        <TextView
            android:id="@+id/tv_price_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_coin_name_1"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/iv_image_1"
            android:textColor="#DCDCDC"
            tools:ignore="RtlHardcoded"
            tools:text="￥25678.87" />

        <TextView
            android:id="@+id/tv_status_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_price_1"
            android:layout_below="@id/tv_score_1"
            android:layout_toLeftOf="@id/tv_price_1"
            android:textColor="#DCDCDC"
            tools:ignore="RtlHardcoded"
            tools:text="强吃" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#111111" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/home_ic_rising_big" />

        <TextView
            android:id="@+id/tv_coin_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_image_2"
            android:textColor="#DCDCDC"
            android:textSize="17sp"
            tools:ignore="RtlHardcoded"
            tools:text="XRP-瑞波币" />

        <TextView
            android:id="@+id/tv_score_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/home_ic_arrow_up_smal"
            android:textColor="#DCDCDC"
            android:textSize="17sp"
            tools:ignore="RelativeOverlap,RtlHardcoded"
            tools:text="9.4" />

        <TextView
            android:id="@+id/tv_price_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_coin_name_2"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/iv_image_2"
            android:textColor="#DCDCDC"
            tools:ignore="RtlHardcoded"
            tools:text="￥25678.87" />

        <TextView
            android:id="@+id/tv_status_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_price_2"
            android:layout_below="@id/tv_score_2"
            android:layout_toLeftOf="@id/tv_price_2"
            android:textColor="#DCDCDC"
            tools:ignore="RtlHardcoded"
            tools:text="强吃" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#111111" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/home_ic_bad_big" />

        <TextView
            android:id="@+id/tv_coin_name_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_image_3"
            android:textColor="#DCDCDC"
            android:textSize="17sp"
            tools:ignore="RtlHardcoded"
            tools:text="XRP-瑞波币" />

        <TextView
            android:id="@+id/tv_score_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/home_ic_arrow_down_smal"
            android:textColor="#DCDCDC"
            android:textSize="17sp"
            tools:ignore="RelativeOverlap,RtlHardcoded"
            tools:text="9.4" />

        <TextView
            android:id="@+id/tv_price_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_coin_name_3"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/iv_image_3"
            android:textColor="#DCDCDC"
            tools:ignore="RtlHardcoded"
            tools:text="￥25678.87" />

        <TextView
            android:id="@+id/tv_status_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_price_3"
            android:layout_below="@id/tv_score_3"
            android:layout_toLeftOf="@id/tv_price_3"
            android:textColor="#DCDCDC"
            tools:ignore="RtlHardcoded"
            tools:text="强吃" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#111111" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="币都指数"
                android:textColor="#DCDCDC"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_coin_index_newest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/home_ic_arrow_up_smal"
                android:gravity="center_vertical"
                android:textColor="#DCDCDC"
                android:textSize="17sp"
                tools:ignore="RtlHardcoded"
                tools:text="23255.48" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lc_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#111111" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新资讯"
            android:textColor="#F7F7F7"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>
