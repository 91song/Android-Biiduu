<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/img_def_banner_2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/shape_coin_newspaper_bg" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/bibao_img_1"
            android:drawableRight="@drawable/bibao_img_2"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:maxEms="14"
            android:textColor="#DCDCDC"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded"
            tools:text="更多国家正推出数字货币区块链技术愈发受欢迎" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:padding="10dp"
        android:textColor="#333333"
        android:textSize="16sp"
        tools:text="香港金管局员金融机构应谨慎防利用数管局员金融机构应谨慎防数…" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#999999"
        android:textSize="13sp"
        tools:ignore="RtlHardcoded"
        tools:text="区块链·比特币·行业行情" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_browser_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_eye"
            android:drawablePadding="2dp"
            android:textColor="#999999"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded"
            tools:text="548" />

        <TextView
            android:id="@+id/tv_share_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="2dp"
            android:textColor="#999999"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded"
            tools:text="89" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#999999"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded"
            tools:text="09.08" />
    </LinearLayout>
</LinearLayout>